@model IEnumerable<EjemploWebGrid.Models.modelos>

@{
    ViewBag.Title = "Lista Modelos";
    var grid = new WebGrid(source: Model, columnNames: new[]
    { "modelo", "precio", "asientos", "combustible", "year_modelo" }, defaultSort: "year_modelo");
    grid.Pager(WebGridPagerModes.All);
}

<h2>Lista Modelos</h2>

<div id="gridContent" style="font-family: Arial; padding: 20px;">
@grid.GetHtml(
    tableStyle: "webgrid-table",
    headerStyle: "webgrid-header",
    footerStyle: "webgrid-footer",
    alternatingRowStyle: "webgrid-alternating-row",
    selectedRowStyle: "webgrid-selected-row",
    rowStyle: "webgrid-row-style",
    columns: grid.Columns(
        grid.Column(columnName: "modelo", header: "Nombre Modelo"),
        grid.Column(columnName: "precio", header: "Precio Venta"),
        grid.Column(columnName: "asientos", header: "# Asientos"),
        grid.Column(columnName: "combustible", header: "Tipo combustible"),
        grid.Column(columnName: "year_modelo", header: "Año del Modelo")
        //grid.Column(columnName: "Editar", format: (item) => {
        //var link = Html.ActionLink("Editar", "Edit", new { id = item.id_rep });
        //return link;
        //})
    )
)
</div>